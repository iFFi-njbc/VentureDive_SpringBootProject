<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3308/hiber</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.show_sql">true</property>
 		<property name="hibernate.hbm2ddl.auto">update</property>
 		<mapping class="com.Hibernate.HibernateTutorial.Student"></mapping>
 		<mapping class="com.Hibernate.HibernateTutorial.Address"></mapping>
 		<mapping class="com.Hibernate.HibernateTutorial.One2one.Question"></mapping>
 		<mapping class="com.Hibernate.HibernateTutorial.One2one.Answer"></mapping>
 		 <mapping class="com.Hibernate.HibernateTutorial.One2Many.QuestionOne2Many"></mapping>
 		<mapping class="com.Hibernate.HibernateTutorial.One2Many.AnswerOne2Many"></mapping>
 		
 		<mapping class="com.Hibernate.HibernateTutorial.Many2Many.Employee"></mapping>
 		<mapping class="com.Hibernate.HibernateTutorial.Many2Many.Project"></mapping>
    </session-factory>
</hibernate-configuration>